<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/header.ejs')  %>

    <body>
        <%- include('./partials/navbar.ejs')  %>

        <div class="blogs">
            <h2>ALL BLOGS</h2>

            <% if(arr.length > 0){ %>
                <% arr.forEach(result => {%>
                   <a class="blog-redirect" href="/blogs/<%= result._id %>">
                    <h2><%= result.title  %></h2>
                    <h3><%= result.author  %></h3>
                    <p><%= result.snippet  %></p>
                    <p><%= result.body  %></p>   
                   </a> 
                    <% })} else{ %>
                        <p>There are no blogs to display!</p>
                        <% } %>
                
        </div>





        <%- include('./partials/footer.ejs')  %>
    </body>
</html>